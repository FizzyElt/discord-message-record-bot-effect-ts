{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"]
        },
        "esModuleInterop": true,
        "moduleDetection": "force",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "strict": true,
        "skipLibCheck": true,
        "allowJs": true
    },
    "include": ["src", "*.config.ts", "*.config.js"]
}
